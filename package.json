{
  "name": "vite-react-typescript-tailwind-starter",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "tsx backend/src/server.ts",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "build": "tsc && vite build",
    "serve": "vite preview --port 3000",
    "lint": "eslint src backend/src __tests__ --ext .ts,.tsx",
    "prepare": "husky install",
    "test": "vitest",
    "test:backend": "vitest __tests__/",
    "test:frontend": "vitest --config vitest.frontend.config.ts",
    "test:seq": "vitest run __tests__/integration/players.integration.test.ts",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:frontend": "eslint src --ext .ts,.tsx",
    "lint:backend": "eslint backend/src --ext .ts",
    "lint:tests": "eslint __tests__ --ext .ts",
    "lint:watch": "chokidar 'src/**/*.{ts,tsx}' -c 'npm run lint'"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node-fetch": "^2.6.13",
    "@types/xml2js": "^0.4.14",
    "better-sqlite3": "^12.2.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xml2js": "^0.6.2",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.14",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "react-router-dom": "^7.8.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.4",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4",
    "vitest-fetch-mock": "^0.4.5"
  }
}
